{
  "name": "semantic-versioning-helper",
  "version": "1.0.0",
  "description": "Helps manage the version of your project across multiple files.",
  "main": "dist/index.js",
  "types": "src/types.d.ts",
  "repository": "github:csaq5507/semantic-versioning-helper",
  "scripts": {
    "prepublishOnly": "yarn run clean && yarn run build",
    "build": "tsc --project tsconfig.json",
    "clean": "rimraf dist",
    "format": "prettier --no-semi --write --trailing-comma=all src{/**,}/*.ts"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "minimist": "^1.2.8",
    "slash": "^5.1.0"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.2",
    "@types/node": "^20.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "keywords": [
    "version increase",
    "version",
    "helper",
    "semantic versioning"
  ],
  "author": "Ivan Waldboth",
  "license": "MIT",
  "files": [
    "src/types.d.ts",
    "dist/**/*.js",
    "README.md"
  ],
  "bugs": {
    "url": "https://github.com/csaq5507/semantic-versioning-helper/issues"
  },
  "homepage": "https://github.com/csaq5507/semantic-versioning-helper#readme",
  "packageManager": "yarn@3.5.1"
}
