{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017"],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "inlineSourceMap": true,
    "noEmitOnError": false,
    "inlineSources": true
  },
  "include": ["src/**/*.ts"],
  "compileOnSave": true
}